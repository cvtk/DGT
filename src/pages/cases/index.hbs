---
title: DGT - наш блог
shortname: cases
layout: default.hbs
---

<div class="cases-content">
  <h1 class="cases-content__title">{{data.title}}</h1>
  <div class="cases-content__nav">
    <ul class="cases-content-nav">
      <li class="cases-content-nav__item">
        <div class="cases-content-nav-item" title="2017" data-year-filter="2017">
          <span class="cases-content-nav-item__year">‘17</span>
        </div>
      </li>
      <li class="cases-content-nav__item">
        <div class="cases-content-nav-item" title="2016" data-year-filter="2016">
          <span class="cases-content-nav-item__year">‘16</span>
        </div>
      </li>
      <li class="cases-content-nav__item">
        <div class="cases-content-nav-item" title="2015" data-year-filter="2015">
          <span class="cases-content-nav-item__year">‘15</span>
        </div>
      </li>
      <li class="cases-content-nav__item">
        <div class="cases-content-nav-item" title="2014" data-year-filter="2014">
          <span class="cases-content-nav-item__year">‘14</span>
        </div>
      </li>
      <li class="cases-content-nav__item">
        <div class="cases-content-nav-item" title="2013" data-year-filter="2013">
          <span class="cases-content-nav-item__year">‘13</span>
        </div>
      </li>
    </ul>
  </div>
  <div class="cases-content__list">
    <ul class="cases-content-list">
      {{#each posts}}{{#is post "cases"}}{{#pages}}
      <li class="cases-content-list__item" data-year="{{moment  data.created  lang ="ru"  format ="YYYY" }}">
        <a href="/cases/{{this.filename}}" class="cases-content-list-item" title="{{data.title}}">
          <div class="cases-content-list-item__image" style="background-image: url(/{{this.basename}}.jpg)"></div>
          <div class="cases-content-list-item__meta">
            <div class="cases-content-list-item-meta">
              <div class="cases-content-list-item-meta__year">‘{{moment  data.created  lang ="ru"  format ="YY" }}</div>
              <div class="cases-content-list-item-meta__header">
                <div class="cases-content-list-item-meta-header">
                  <h4 class="cases-content-list-item-meta-header__title">{{data.title}}</h4>
                  {{#each data.tags}}
                  <span class="cases-content-list-item-meta-header__subtitle">{{this}}</span>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </a>
      </li>
      {{/pages}}{{/is}}{{/each}}
    </ul>
  </div>
</div>